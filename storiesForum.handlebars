<body>
	<div class="container">
		<!-- h1 through h6 are headers. The higher the number, the smaller the header -->
		<!-- p means paragraph -->
		<div>
			<h1 align="center">Tell Your Story to The World!</h1>
			<!--<p align="center"></p>-->
			<!--<button id="testjs" class="btn btn-primary btn-lg">Test Javascript</button>-->
		</div>


		<!--<h4 align="center"></h4>-->
		<!-- divs are invisible structuring elements that stack vertically by default. Use them to organize your code -->
		<!-- img tags are images. Lorem Pixel will deliver random images; handy! -->
		<!-- a are anchors, also known as hyperlinks. Use the href attribute to tell the browser where to go when the user clicks -->

<form id="projectForm" role="form">
    <div class="form-group">
      <label for="project">Choose the continent your story took place in:</label>
      <select class="form-control" id="project">
        <option value="#project1">Africa</option>
        <option value="#project2">Antarctica</option>
        <option value="#project3">Asia</option>
        <option value="#project4">Australia</option>
        <option value="#project5">Europe</option>
        <option value="#project6">North America</option>
        <option value="#project7">South America</option>
      </select>
    </div>
    <div class="form-group">
      <label for="description">Write the country your story took place in:</label>
      <input type="text" class="form-control" id="description" placeholder="Istanbul...Iceland...">
    </div>
    <div class="form-group">
      <label for="description">Write the city your story took place in:</label>
      <input type="text" class="form-control" id="description" placeholder="Paris...Tokyo...">
    </div>
    <div class="form-group">
      <label for="description">Your Story:</label>
      <textarea type="text" class="form-control" id="description" rows="8" cols="80" placeholder="Write your story here..."></textarea>
    </div>
    <div>
      <input type="button" value="Publish Your Story" onclick="window.location.href='index.html'">
    </div>
 </form>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/introHCI.js"></script>
</body>
</html>
